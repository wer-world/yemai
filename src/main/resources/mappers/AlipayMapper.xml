<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kgc.dao.AlipayDao">
    <update id="modAlipayStatus">
        update easybuy_alipay
        set status = 1
        where order_number = #{orderNumber}
    </update>
    <select id="getAlipayList" resultType="Alipay">
        select order_number, params, status
        from easybuy_alipay
        where status = 0
    </select>
    <insert id="addAlipay">
        insert into easybuy_alipay(order_number, params)
            value (#{orderNumber}, #{params})
    </insert>
</mapper>
